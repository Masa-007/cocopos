<h2 class="text-center mb-6"><%= t('devise.registrations.edit.title') %></h2>

<div class="auth-card">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, t('activerecord.attributes.user.name') %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, t('activerecord.attributes.user.email') %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-sm text-gray-500 mb-3">
        <%= t('devise.registrations.edit.waiting_confirmation', email: resource.unconfirmed_email) %>
      </p>
    <% end %>

    <div class="field">
      <%= f.label :password, t('activerecord.attributes.user.password') %><br />
      <em class="text-sm text-gray-500"><%= t('devise.registrations.edit.password_hint') %></em><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">（<%= @minimum_password_length %><%= t('devise.registrations.edit.characters_or_more') %>）</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, t('devise.registrations.edit.current_password') %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
      <em class="text-sm text-gray-500"><%= t('devise.registrations.edit.current_password_hint') %></em>
    </div>

    <div class="actions mt-6">
      <%= f.submit t('devise.registrations.edit.update'), class: "btn-primary w-full" %>
    </div>
  <% end %>
</div>

<div class="auth-card mt-8 text-center">
  <h3 class="font-bold mb-3"><%= t('devise.registrations.edit.cancel_title') %></h3>
  <p class="mb-3 text-gray-600"><%= t('devise.registrations.edit.cancel_notice') %></p>
  <%= button_to t('devise.registrations.edit.cancel_account'),
        registration_path(resource_name),
        data: { confirm: t('devise.registrations.edit.cancel_confirm') },
        method: :delete,
        class: "btn-danger" %>
</div>

<div class="text-center mt-6">
  <%= link_to t('devise.shared.links.back'), root_path, class: "text-rose-500 hover:underline" %>
</div>
