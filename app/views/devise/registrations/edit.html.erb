<div class="mx-auto max-w-2xl px-4 py-10">
  <h2 class="text-center mb-6 text-2xl font-bold text-gray-800">
    <%= t('devise.registrations.edit.title') %>
  </h2>

  <div class="auth-card">
    <%= form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name),
                 html: { method: :put, data: { turbo: false } }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6 border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">
          <%= t('devise.registrations.edit.profile_section') %>
        </h3>

        <div class="field">
          <%= f.label :name, t('activerecord.attributes.user.name') %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :email, t('activerecord.attributes.user.email') %><br />
          <%= f.email_field :email, autocomplete: "email", disabled: true %>
          <em class="text-sm text-gray-500">
            <%= t('devise.registrations.edit.email_locked', default: '※メールアドレスは変更できません') %>
          </em>
        </div>
      </div>

      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">
          <%= t('devise.registrations.edit.confirm_section') %>
        </h3>

        <% unless resource.provider == 'google_oauth2' %>
          <div class="field">
            <%= f.label :current_password, t('devise.registrations.edit.current_password') %><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
            <em class="text-sm text-gray-500">
              <%= t('devise.registrations.edit.current_password_hint') %>
            </em>
          </div>
        <% end %>
      </div>

      <% if resource.provider == 'google_oauth2' %>
        <div class="mb-3">
          <p class="text-sm text-gray-600">
            <%= t('devise.registrations.edit.google_reauth_description') %>
          </p>
        </div>

        <div class="mt-3 mb-6">
          <%= link_to t('devise.registrations.edit.google_reauth_link'),
                        google_reauth_user_path,
                        method: :post,
                        data: { turbo: false },
                        class: "inline-flex text-rose-500 hover:underline bg-transparent p-0 border-0" %>
        </div>
      <% end %>

      <div class="actions mt-6">
        <%= f.submit t('devise.registrations.edit.update'), class: "btn-primary w-full" %>
      </div>

    <% end %>
  </div>

  <div class="auth-card mt-8 text-center">
    <h3 class="font-bold mb-3">
      <%= t('devise.registrations.edit.cancel_title') %>
    </h3>

    <p class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700 whitespace-pre-line">
      <%= t('devise.registrations.edit.cancel_attention') %>
    </p>

    <button type="button" id="accountDeleteButton" class="btn-danger">
      <%= t('devise.registrations.edit.cancel_account') %>
    </button>
  </div>

  <div class="text-center mt-6">
    <%= link_to t('devise.shared.links.back'),
                mypage_path,
                class: "text-rose-500 hover:underline" %>
  </div>
</div>

<div id="accountDeleteModal" class="modal">
  <div class="modal-content relative">
    <button
      type="button"
      class="modal-close"
      aria-label="閉じる"
      data-modal-close
    >
      &times;
    </button>

    <h3 class="text-2xl font-bold text-red-600 mb-4">
      <%= t('devise.registrations.edit.cancel_confirm') %>
    </h3>

    <p class="text-gray-700 mb-6">
      <%= t('devise.registrations.edit.cancel_attention') %>
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <button type="button" class="btn-secondary" data-modal-close>
        キャンセル
      </button>

      <%= link_to t('devise.registrations.edit.cancel_account'),
                  registration_path(resource_name),
                  data: { turbo_method: :delete },
                  class: "btn-danger inline-flex items-center justify-center px-6 py-3 rounded-md" %>
    </div>
  </div>
</div>
