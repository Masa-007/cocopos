<div class="mx-auto max-w-2xl px-4 py-10">
  <h2 class="text-center mb-6 text-2xl font-bold text-gray-800">
    <%= t('devise.registrations.edit.title') %>
  </h2>

  <div class="auth-card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- プロフィール -->
      <div class="mb-6 border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">
          <%= t('devise.registrations.edit.profile_section') %>
        </h3>

        <div class="field">
          <%= f.label :name, t('activerecord.attributes.user.name') %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :email, t('activerecord.attributes.user.email') %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="text-sm text-gray-500 mb-3">
            <%= t(
              'devise.registrations.edit.waiting_confirmation',
              email: resource.unconfirmed_email
            ) %>
          </p>
        <% end %>
      </div>

      <!-- パスワード -->
      <div class="mb-6 border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">
          <%= t('devise.registrations.edit.password_section') %>
        </h3>

        <div class="field">
          <%= f.label :password, t('activerecord.attributes.user.password') %><br />
          <em class="text-sm text-gray-500">
            <%= t('devise.registrations.edit.password_hint') %>
          </em><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">
              （<%= @minimum_password_length %><%= t('devise.registrations.edit.characters_or_more') %>）
            </em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <!-- 確認 -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">
          <%= t('devise.registrations.edit.confirm_section') %>
        </h3>

        <div class="field">
          <%= f.label :current_password, t('devise.registrations.edit.current_password') %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
          <em class="text-sm text-gray-500">
            <%= t('devise.registrations.edit.current_password_hint') %>
          </em>
        </div>
      </div>

      <div class="actions mt-6">
        <%= f.submit t('devise.registrations.edit.update'), class: "btn-primary w-full" %>
      </div>
    <% end %>
  </div>

  <!-- パスワード再設定 -->
  <div class="auth-card mt-8">
    <h3 class="font-bold mb-3">
      <%= t('devise.registrations.edit.reset_title') %>
    </h3>
    <p class="mb-3 text-gray-600">
      <%= t('devise.registrations.edit.reset_notice') %>
    </p>
    <%= link_to t('devise.registrations.edit.reset_action'),
          new_user_password_path,
          class: "btn-primary w-full text-center inline-block" %>
  </div>

  <!-- 退会 -->
  <div class="auth-card mt-8 text-center">
    <h3 class="font-bold mb-3">
      <%= t('devise.registrations.edit.cancel_title') %>
    </h3>

   <p class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700 whitespace-pre-line">
     <%= t('devise.registrations.edit.cancel_attention') %>
   </p>   

    <button type="button" id="accountDeleteButton" class="btn-danger">
      <%= t('devise.registrations.edit.cancel_account') %>
    </button>
  </div>

  <div class="text-center mt-6">
    <%= link_to t('devise.shared.links.back'),
          mypage_path,
          class: "text-rose-500 hover:underline" %>
  </div>
</div>

<!-- 退会確認モーダル -->
<div id="accountDeleteModal" class="modal">
  <div class="modal-content relative">
    <button
      type="button"
      class="modal-close"
      aria-label="閉じる"
      data-modal-close
    >
      &times;
    </button>

    <h3 class="text-2xl font-bold text-red-600 mb-4">
      <%= t('devise.registrations.edit.cancel_confirm') %>
    </h3>

    <p class="text-gray-700 mb-6">
      <%= t('devise.registrations.edit.cancel_attention') %>
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <button type="button" class="btn-secondary" data-modal-close>
        キャンセル
      </button>

      <%= link_to t('devise.registrations.edit.cancel_account'),
            registration_path(resource_name),
            data: { turbo_method: :delete },
            class: "btn-danger inline-flex items-center justify-center px-6 py-3 rounded-md" %>
    </div>
  </div>
</div>
