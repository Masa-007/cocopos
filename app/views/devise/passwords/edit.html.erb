<div class="mx-auto max-w-md px-4 py-10">
  <h2 class="text-center mb-6"><%= t('devise.passwords.edit.change_your_password', default: 'パスワードを変更') %></h2>
    <div class="auth-card">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
            <div class="field">
        <%= f.label :password, t('devise.passwords.edit.new_password', default: '新しいパスワード') %><br />

        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">
            <%= t('devise.passwords.edit.minimum_password_length', count: @minimum_password_length, default: '（%{count}文字以上）') %>
          </em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>

      </div>
            <div class="field">
        <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password', default: '新しいパスワード（確認用）') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
            <div class="actions mt-6">
        <%= f.submit t('devise.passwords.edit.change_my_password', default: 'パスワードを変更'), class: "btn-primary w-full" %>
      </div>
    <% end %>

  </div>
    <div class="mt-6 space-y-3 text-center">
    <%= render "devise/shared/links" %>
  </div>
  
</div>
