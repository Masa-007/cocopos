<div class="auth-container">
  <div class="auth-card">
    <h2><%= t('devise.passwords.new.forgot_your_password', default: 'パスワードをお忘れですか？') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, t('devise.passwords.new.email', default: 'メールアドレス') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.new.send_instructions', default: 'パスワード再設定メールを送信') %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
