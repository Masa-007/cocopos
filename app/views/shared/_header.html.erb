<header class="wooden-header" data-controller="menu">
  <div class="header-inner">

    <!-- 左側ロゴ -->
    <div class="header-left">
      <%= link_to root_path, class: "header-logo" do %>
        cocopos📮
      <% end %>
      <p class="header-subtitle">- 心の目安箱 -</p>
    </div>

    <!-- ハンバーガー（スマホのみ表示） -->
    <button 
      class="hamburger-button"
      data-action="click->menu#toggle"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- ナビ（PC用 + スマホドロワー） -->
    <nav class="header-nav" data-menu-target="nav">
      <a href="#" id="howToLink" class="nav-button">使い方</a>
      <%= link_to "みんなの投稿一覧", posts_path, class: "nav-button", data: { turbo: false } %>
      <%= link_to "投稿を作成する", new_post_path, class: "nav-button new-post-link", data: { turbo: false } %>
      <% if user_signed_in? %>
        <%= link_to "マイページ", mypage_path, class: "nav-button mypage-button" %>
        <%= button_to "ログアウト", destroy_user_session_path,
              method: :delete,
              data: { turbo_confirm: "ログアウトしますか？" },
              class: "logout-button" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "login-button" %>
        <%= link_to "新規登録", new_user_registration_path, class: "nav-button signup-button" %>
      <% end %>
    </nav>
  </div>
</header>
