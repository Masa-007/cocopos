<main class="flex-grow pt-24 pb-12">
  <div class="container mx-auto max-w-4xl px-6">
    <% if params[:from] == "mypage" %>
      <%= link_to "← あなたの投稿一覧に戻る", mypage_posts_path,
                  class: "text-blue-600 hover:underline inline-block mb-6" %>
    <% else %>
      <%= link_to "← みんなの投稿一覧に戻る", posts_path,
                  class: "text-blue-600 hover:underline inline-block mb-6" %>
    <% end %>

    <div class="post-detail-card bg-white rounded-3xl shadow-lg overflow-hidden">
      <!-- ヘッダー -->
      <div class="post-header p-5 sm:p-6 border-b <%= @post.post_type_color %>">
        <div class="flex flex-col gap-4">
          <div class="flex items-center gap-3">
            <span class="text-4xl"><%= @post.post_type_icon %></span>
            <div>
              <h2 class="text-2xl font-bold text-gray-800"><%= @post.post_type_name %></h2>
              <p class="text-sm text-gray-600">
                <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              </p>
            </div>
          </div>

          <div class="flex flex-wrap items-center justify-between gap-3">
            <div class="flex flex-wrap items-center gap-2">
              <% if @post.comment_allowed? %>
                <span class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-bold">
                  💬 意見募集中
                </span>
              <% else %>
                <span class="inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-bold">
                  💭 コメント不要
                </span>
              <% end %>

              <% if @post.thanks? && @post.thanks_recipient_tag.present? %>
                <span class="inline-block px-3 py-1 bg-pink-100 text-pink-700 rounded-full text-sm font-semibold">
                  <%= @post.thanks_recipient_tag %>
                </span>
              <% end %>
            </div>

            <div class="flex flex-wrap gap-2 sm:justify-end">
              <% if user_signed_in? && (@post.user == current_user || current_user.admin?) %>
                <% if @post.user == current_user %>
                  <%= link_to edit_post_path(@post, from: params[:from]),
                              class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition" do %>
                    ✏️ 編集
                  <% end %>
                <% end %>

                <%= button_to post_path(@post, from: params[:from]),
                              method: :delete,
                              data: { turbo_confirm: "本当に削除しますか？この操作は取り消せません。" },
                              class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition" do %>
                  🗑️ 削除
                <% end %>
              <% else %>
                <span class="px-4 py-2 rounded-lg opacity-0 pointer-events-none select-none" aria-hidden="true">✏️ 編集</span>
                <span class="px-4 py-2 rounded-lg opacity-0 pointer-events-none select-none" aria-hidden="true">🗑️ 削除</span>
              <% end %>
            </div>
          </div>

          <div class="mt-6">
            <h1 class="text-2xl font-extrabold text-gray-900 break-words whitespace-pre-line">
              <%= h(@post.title.to_s) %>
            </h1>
          </div>
        </div>
      </div>

      <!-- 本文 -->
      <div class="post-body p-8">
        <div class="post-body-content max-w-none">
          <%= simple_format(@post.body.to_s) %>
        </div>
      </div>

      <!-- 🌱 未来宣言：進捗・期限 -->
      <%= render "posts/future_status", post: @post %>

      <!-- 🌱 小目標 -->
      <%= render "posts/milestones", post: @post %>

      <!-- フッター -->
      <div class="post-footer p-6 bg-gray-50 border-t rounded-b-3xl">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <span class="text-gray-700">
              <span class="font-bold">投稿者:</span>
              <%= @post.display_name %>
            </span>
          </div>

          <div id="flower_btn_post_<%= @post.id %>">
            <%= render "flowers/button", flowerable: @post %>
          </div>
        </div>
      </div>
    </div>

    <!-- コメント -->
    <div class="mt-12 space-y-10">
      <section id="comment-form" class="comment-form">
        <h3 class="form-title text-lg font-bold mb-4">📝 コメントを書く</h3>

        <% if user_signed_in? %>
          <% if @post.is_public? && @post.comment_allowed? %>
            <%= form_with(model: [@post, Comment.new], local: true) do |f| %>
              <%= f.text_area :content,
                              rows: 3,
                              placeholder: "心に浮かんだ言葉をどうぞ…",
                              class: "w-full border border-gray-300 rounded-xl p-3 mb-4 focus:outline-none focus:ring-2 focus:ring-green-300 text-sm bg-white" %>

              <div class="flex items-center justify-between mt-3">
                <label class="flex items-center gap-2 text-sm text-gray-700">
                  <%= f.check_box :is_anonymous,
                                  class: "h-4 w-4 text-green-500 rounded border-gray-300 focus:ring-green-400" %>
                  匿名で投稿する
                </label>

                <%= f.submit "投稿する",
                             class: "bg-green-500 text-white px-6 py-2 text-sm rounded-xl hover:bg-green-600 transition shadow-sm" %>
              </div>
            <% end %>

          <% elsif !@post.is_public? %>
            <textarea rows="3" disabled
                      placeholder="この投稿は非公開のためコメントを追加できません。"
                      class="w-full border border-gray-300 rounded-xl p-3 mb-4 text-gray-400 bg-gray-100 cursor-not-allowed"></textarea>

          <% else %>
            <textarea rows="3" disabled
                      placeholder="この投稿はコメント受付を停止しています。"
                      class="w-full border border-gray-300 rounded-xl p-3 mb-4 text-gray-400 bg-gray-100 cursor-not-allowed"></textarea>
          <% end %>
        <% else %>
          <p class="login-required text-center text-gray-500 py-4">
            コメントするにはログインが必要です。
          </p>
        <% end %>
      </section>

      <section class="comments-section rounded-3xl shadow-md border border-gray-100 p-6">
        <h3 class="section-title text-lg font-semibold text-gray-800 mb-6">
          💬 <span>みんなのコメント</span>
        </h3>

        <% if @post.comments.any? %>
          <div class="comments-list space-y-6">
            <%= render @post.comments, post: @post %>
          </div>
        <% else %>
          <p class="comment-empty text-gray-500 text-center">
            まだコメントはありません。
          </p>
        <% end %>
      </section>
    </div>
  </div>
</main>
