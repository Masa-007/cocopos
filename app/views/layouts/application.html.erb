<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= display_meta_tags(default_meta_tags(page_image_path: @page_image_path)) %>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= favicon_link_tag 'favicon/favicon.ico' %>
  <%= favicon_link_tag 'favicon/favicon-32x32.png', rel: 'icon', type: 'image/png', sizes: '32x32' %>
  <%= favicon_link_tag 'favicon/apple-touch-icon.png', rel: 'apple-touch-icon', type: 'image/png', sizes: '180x180' %>

  <script async src="https://www.googletagmanager.com/gtag/js?id=G-TZCCWQN88R"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-TZCCWQN88R');
  </script>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <script type="module" src="/assets/application.js" defer></script>

  <script>
    document.addEventListener("turbo:load", () => {
      const flashes = document.querySelectorAll(".flash");
      flashes.forEach((flash) => {
        setTimeout(() => {
          flash.classList.add("fade-out");
          setTimeout(() => flash.remove(), 500);
        }, 2000);
      });
    });
  </script>
</head>

<% body_background_class =
     if controller_name == "posts" && %w[index show].include?(action_name)
       "bg-posts-gradient"
     else
       "bg-gradient-to-br from-rose-50 to-orange-50"
     end %>

<body class="flex flex-col min-h-screen <%= body_background_class %> text-gray-800 <%= @season %> <%= controller_name %>-<%= action_name %>">
  <%= render "shared/header" %>

  <div id="flash-container" class="fixed top-4 right-4 space-y-2 z-[10000]">
    <% if notice.present? %>
      <div class="flash flash-notice">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="flash flash-alert">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <main class="flex-grow relative z-0">
    <%= yield %>
  </main>

  <%= render "shared/modal" %>
  <%= render "shared/footer" %>
</body>
</html>
